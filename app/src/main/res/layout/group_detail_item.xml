<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/debt_detail_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp" >

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/group_detail_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/info_item_pressed"
        tools:layout_editor_absoluteY="25dp">

        <TextView
            android:id="@+id/group_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_detail_desc_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-condensed"
            android:text="2019-01-01"
            android:textSize="15dp"
            android:textStyle="italic|bold"
            tools:layout_editor_absoluteX="299dp"
            tools:layout_editor_absoluteY="60dp" />

        <TextView
            android:id="@+id/group_detail_desc_text"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="13dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:lines="2"
            android:text="desc lalal lala lal aldas dfjhasdfh sdjk"
            android:textColor="@color/half_black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text_proposed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_amount"
            android:layout_alignStart="@+id/text_amount"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Proposed By:"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/group_detail_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_proposed"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/text_proposed"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="username" />

        <TextView
            android:id="@+id/text_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/group_detail_desc_text"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/group_detail_desc_text"
            android:fontFamily="sans-serif-condensed"
            android:text="Amount for each:"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/group_detail_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_amount"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/text_amount"
            android:fontFamily="sans-serif-condensed"
            android:text="50.00"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
