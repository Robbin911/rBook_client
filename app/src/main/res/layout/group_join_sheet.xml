<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_join_bottom_sheet"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <android.support.design.button.MaterialButton
                android:id="@+id/btn_group_join_cancel"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/baseline_clear_white_24" />
            <TextView
                android:id="@+id/sheet_title_group_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Join Group" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/group_join_edit_id"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="22dp"
                android:layout_toEndOf="@+id/imageView4"
                android:fontFamily="sans-serif-condensed"
                android:hint="Input the group ID"
                android:maxLength="40"
                android:singleLine="true"
                android:textColor="@color/half_black"
                android:textSize="17dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/btn_group_join_submit"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_join_edit_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-condensed"
                android:text="SUBMIT" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="34dp"
                app:srcCompat="@drawable/baseline_group_24" />

        </RelativeLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>