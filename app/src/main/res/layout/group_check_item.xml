<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/debt_detail_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="8dp" >

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/group_check_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/info_item_pressed"
        tools:layout_editor_absoluteY="25dp">

        <TextView
            android:id="@+id/group_check_member_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/group_check_text_member_id"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/group_check_text_member_id"
            android:fontFamily="sans-serif-condensed"
            android:text="id"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/group_check_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/group_check_text_member_name"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="-2dp"
            android:layout_toEndOf="@+id/group_check_text_member_name"
            android:fontFamily="sans-serif-condensed"
            android:text="name"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/group_check_text_member_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_check_text_member_name"
            android:layout_alignStart="@+id/group_check_text_member_name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-condensed"
            android:text="ID:"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/group_check_text_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Name:" />

        <TextView
            android:id="@+id/group_check_text_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="154dp"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Money:" />

        <TextView
            android:id="@+id/group_check_text_check_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_check_text_amount"
            android:layout_alignStart="@+id/group_check_text_amount"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Status:"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/group_check_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/group_check_text_check_status"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/group_check_text_check_status"
            android:fontFamily="sans-serif-condensed"
            android:text="Checked"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/group_check_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/group_check_member_name"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/group_check_text_amount"
            android:fontFamily="sans-serif-condensed"
            android:text="32.00"
            android:textStyle="bold"
            android:textSize="19dp"/>

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_group_check_check"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            android:fontFamily="sans-serif-condensed"
            android:text="CHECK"
            android:textSize="13dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>