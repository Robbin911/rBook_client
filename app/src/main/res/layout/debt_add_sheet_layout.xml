<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debt_bottom_sheet"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <android.support.design.button.MaterialButton
                android:id="@+id/btn_debt_add_cancel"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/baseline_clear_white_24" />

            <TextView
                android:id="@+id/sheet_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Add Pair" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/debt_add_user_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="89dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="Input The User Name"
                android:singleLine="true"
                android:maxLength="16"
                android:textColor="@color/half_black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/debt_add_desc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/debt_add_user_name"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif-condensed"
                android:hint="Input The Greetings"
                android:maxLength="140"
                android:textColor="@color/half_black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="66dp"
                android:layout_marginTop="24dp"
                app:srcCompat="@drawable/outline_account_circle_24" />

            <android.support.design.button.MaterialButton
                android:id="@+id/btn_debt_add_send"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/debt_add_desc"
                android:layout_alignParentStart="true"
                android:layout_marginStart="67dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-condensed"
                android:text="SEND" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="66dp"
                android:layout_marginTop="82dp"
                app:srcCompat="@drawable/baseline_comment_24" />

        </RelativeLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>