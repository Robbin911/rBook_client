<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_detail_item_sheet"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/welcome_refresh"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/welcome_recycler"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp" />


            </android.support.v4.widget.SwipeRefreshLayout>

            <TextView
                android:id="@+id/welcome_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView7"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-9dp"
                android:layout_toEndOf="@+id/imageView7"
                android:fontFamily="sans-serif-condensed"
                android:text="UserName"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/baseline_account_circle_24" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView7"
                android:layout_alignStart="@+id/imageView7"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="ID:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/welcome_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_name"
                android:layout_marginStart="9dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textView5"
                android:fontFamily="sans-serif-condensed"
                android:text="UserID"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/welcome_refresh"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-3dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Debt Relationship Circle"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="200dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Total:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/welcome_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_name"
                android:layout_marginStart="3dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/textView8"
                android:fontFamily="sans-serif-condensed"
                android:text="50.00"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="7dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Behaviour Analysis Rank:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Suggestion:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/welcome_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView11"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/textView11"
                android:fontFamily="sans-serif-condensed"
                android:text=" "
                android:textColor="@color/md_grey_800"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/welcome_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView10"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-2dp"
                android:layout_toEndOf="@+id/textView10"
                android:fontFamily="sans-serif-condensed"
                android:text="64"
                android:textSize="18dp"
                android:textStyle="italic|bold" />


        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>